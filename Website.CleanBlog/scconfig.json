{
    // every project must have a unique id, since the project-unique-id is used to
    // calculate item ids.
    "project-unique-id": "CleanBlog",

    // wwwroot points to the base directory of the website
    // The wwwroot directory must contain a 'Data' and a 'Website' folder
    "wwwroot": "e:\\inetpub\\wwwroot\\Pathfinder",
    "host-name": "http://pathfinder",

    // user name and password
    "user-name": "sitecore\\admin",
    "password": "b",

    // Sitecore database name (master, core, or web)
    "database": "master",

    // build pipeline
    "pipeline": "check-project pack-nuget copy-dependencies copy-package install-package publish-database",
    
    // mapping of files between local path and server path and item path
    "files": {
         "html": {
             "project-directory": "",
             "include": "/*.html",
             "website-directory": "/CleanBlog/layout/renderings",
             "item-path": "/sitecore/layout/renderings/CleanBlog",
             "database": "master"
         },
         "img": {
             "project-directory": "/img",
             "include": "**",
             "website-directory": "",
             "item-path": "/sitecore/media library/CleanBlog"
         }
    },
    
    "external-references": {
        "{76036F5E-CBCE-46D1-AF0A-4143F9B557AA}": "/sitecore/templates/Sample/Sample Item",
        "{99F8905D-4A87-4EB8-9F8B-A9BEBFB3ADD6}": "/sitecore/templates/System/Layout/Renderings/View rendering"
    }
}
