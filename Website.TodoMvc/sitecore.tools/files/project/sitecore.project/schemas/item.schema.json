{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",

    "additionalProperties": false,
    "properties": {
        "$schema": { "type": "string" },
        "Item": { "$ref": "#/definitions/Item" },
        "Template": { "$ref": "#/definitions/Template" }
    },

    "definitions": {
        "Fields": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "oneOf": [
                        { "type": "string" },
                        { "type": "integer" },
                        { "type": "boolean" },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "Value": {
                                    "oneOf": [
                                        { "type": "string" },
                                        { "type": "integer" },
                                        { "type": "boolean" }
                                    ]
                                },
                                "Value.Hint": { "$ref": "#/definitions/FieldValueHint" },
                                "Field.Type": { "$ref": "#/definitions/FieldType" },
                                "Field.ShortHelp": { "type": "string" },
                                "Field.LongHelp": { "type": "string" },
                                "Field.SortOrder": { "type": "integer" }
                            },
                            "required": [ "Value" ]
                        }
                    ]
                }
            }
        },

        "Item": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Id": { "type": "string" },
                "Name": { "type": "string" },
                "Database": { "$ref": "#/definitions/DatabaseName" },
                "Template": { "type": "string" },
                "Template.CreateFromFields": { "type": "boolean" },
                "Template.Id": { "type": "string" },
                "Template.ShortHelp": { "type": "string" },
                "Template.LongHelp": { "type": "string" },
                "Template.Icon": { "type": "string" },
                "Layout.HtmlFile": { "type": "string" },

                "Fields": {
                    "type": "object",
                    "patternProperties": {
                        "Unversioned": {
                            "type": "object",
                            "additionalProperties": false,
                            "patternProperties": {
                                ".+": {
                                    "$ref": "#/definitions/Fields"
                                }
                            }
                        },

                        "Versioned": {
                            "type": "object",
                            "additionalProperties": false,
                            "patternProperties": {
                                ".+": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "patternProperties": {
                                        "^[0-9]+$": {
                                            "$ref": "#/definitions/Fields"
                                        }
                                    }

                                }
                            }
                        },

                        "Layout": {
                            "type": "object",
                            "oneOf": [
                                { "$ref": "master.layout.schema.json#/definitions/Layout" }
                                // { "$ref": "core.layout.schema.json#/definitions/Layout" }
                            ]
                        },

                        "^((?!(Versioned|Unversioned|Layout)).)*$": {
                            "oneOf": [
                                { "type": "string" },
                                { "type": "integer" },
                                { "type": "boolean" },
                                {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "Value": {
                                            "oneOf": [
                                                { "type": "string" },
                                                { "type": "integer" },
                                                { "type": "boolean" }
                                            ]
                                        },
                                        "Value.Hint": { "$ref": "#/definitions/FieldValueHint" },
                                        "Field.Type": { "$ref": "#/definitions/FieldType" },
                                        "Field.ShortHelp": { "type": "string" },
                                        "Field.LongHelp": { "type": "string" },
                                        "Field.SortOrder": { "type": "integer" }
                                    },
                                    "required": [ "Value" ]
                                }
                            ]
                        }
                    }
                },

                "Item": { "$ref": "#/definitions/Item" },
                "template": { "$ref": "#/definitions/Template" }
            }
        },

        "Template": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Id": { "type": "string" },
                "Name": { "type": "string" },
                "BaseTemplates": { "type": "string" },
                "Icon": { "type": "string" },
                "ShortHelp": { "type": "string" },
                "LongHelp": { "type": "string" },
                "Layout.HtmlFile": { "type": "string" },
                "Sections": {
                    "type": "array",
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "Name": { "type": "string" },
                            "Icon": { "type": "string" },
                            "Fields": {
                                "type": "array",
                                "items": {
                                    "additionalProperties": false,
                                    "properties": {
                                        "Name": { "type": "string" },
                                        "Type": { "$ref": "#/definitions/FieldType" },
                                        "Source": { "type": "string" },
                                        "Sharing": { "$ref": "#/definitions/Sharing" },
                                        "ShortHelp": { "type": "string" },
                                        "LongHelp": { "type": "string" },
                                        "SortOrder": { "type": "integer" },
                                        "StandardValue": { "type": "string" }
                                    },
                                    "required": [ "Name" ]
                                }
                            }
                        },
                        "required": [ "Name", "Fields" ]
                    }
                }
            }
        },

        "FieldType": {
            "enum": [
                "Single-Line Text",
                "Checkbox",
                "Rich Text",
                "Image",

                "Multi-Line Text",
                "Date",
                "Datetime",

                "Accounts Multilist",
                "AccountSelector",
                "Attachment",
                "Campaign Tree",
                "Checklist",
                "Countable Edit",
                "Custom",
                "Datasource",
                "Droplink",
                "Droplist",
                "Droptree",
                "File",
                "File Drop Area",
                "General Link",
                "General Link with Search",
                "Grouped Droplink",
                "Grouped Droplist",
                "Icon",
                "IFrame",
                "Integer",
                "Internal Link",
                "Layout",
                "Multilist",
                "Multilist with Search",
                "Name Lookup Value List",
                "Name Value List",
                "Number",
                "Page Preview",
                "Password",
                "Profile Card Value",
                "Profile Cards",
                "Query Builder",
                "Query Datasource",
                "Rendering Datasource",
                "Rules",
                "Security",
                "Sitecore User",
                "Template Field Source",
                "Thumbnail",
                "Tracking",
                "tree",
                "Treelist",
                "TreelistEx",
                "Tristate",
                "Version Link",
                "Word Document"
            ]
        },

        "Sharing": {
            "enum": [
                "Shared",
                "Unversioned"
            ]
        },

        "DatabaseName": {
            "enum": [
                "master",
                "core",
                "web"
            ]
        },

        "FieldValueHint": {
            "enum": [
                "Text"
            ]
        }
    }
}
