{
  // "$schema": ".schemas/config.json",
  "wwwroot": "",
  "hostname": "",

  // solution directory relative to tools path
  "solutiondirectory": "..",

  // project directory relative to solution directory
  "projectdirectory": "",

  // output directory relative to solution directory
  "outputdirectory": ".sitecore.package",

  // content directory relative to output directory
  "contentdirectory": "content",

  // serialization directory relative to output directory
  "serializationdirectory": "serialization/master",
  "database": "master",

  // default pipeline
  "pipeline": "init",

  "init": {
    "pipeline": "init"
  },

  "preprocessing": {
    "filetypes": {
      "*.item": "serialization-file",
      "*.item.xml": "item-xml-file",
      "*.component.xml": "serialization-file",
      "*.page.xml": "serialization-file",
      "*.layout.xml": "serialization-file",
      "*.cshtml": "view-rendering",
      "*.aspx": "aspx-rendering",
      "*.ascx": "ascx-rendering",
      "*.ashx": "content-file",
      "*.js": "content-file",
      "*.css": "content-file",
      "*.png": "media-file",
      "*.bmp": "media-file",
      "*.gif": "media-file",
      "*.jpg": "media-file",
      "*.jpeg": "media-file",
      "*.pdf": "media-file",
      "*.docx": "media-file",
      "*.doc": "media-file",
      "*.zip": "media-file",
      "web.config": "content-file"
    }
  },

  "packaging": {
    "nuspec": {
      "filename": "scc.nuspec",
      "id": "scc",
      "version": "1.0.0",
      "title": "Package",
      "authors": "scc",
      "owners": "scc",
      "description": "Autogenerated package",
      "summary": "Not much to tell",
      "tags": ""
    }
  },

  "deploying": {
    "packagedirectory": "packages",
    "installurl": "/sitecore/shell/client/Applications/Pathfinder/InstallPackage.aspx?w=0&iu=",
    "publishurl": "/sitecore/shell/client/Applications/Pathfinder/Publish.aspx?m=i&db="
  },

  "extract": {
    "pipeline": "extract"
  },

  // directories to ignore while preprocessing
  "systemdirectories": ".settings node_modules",

  "websiteFolderName": "Website",
  "dataFolderName": "Data",

  "error-messages-language": "en-US",
  "ignore-blank-error-messages": false
}