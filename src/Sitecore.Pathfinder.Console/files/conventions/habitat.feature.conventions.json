{
    "check-project": {
        "conventions": {
            "habitat-feature-convention-0": {
                "filter": "files",
                "if": {
                    "or": {
                        "file-name-extension-0": ".js",
                        "file-name-extension-1": ".css",
                        "file-name-extension-2": ".eot",
                        "file-name-extension-3": ".svg",
                        "file-name-extension-4": ".ttf",
                        "file-name-extension-5": ".woff",
                        "file-name-extension-6": ".woff2"
                    }
                },
                "then": {
                    "trace-warning": {
                        "msg": "1081",
                        "text": "A Habitat.Feature should not contain design assets. To fix, move the file to a Habitat.Design project."
                    }
                }
            }
        }
    }
}
