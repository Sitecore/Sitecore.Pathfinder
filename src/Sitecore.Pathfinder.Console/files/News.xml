<?xml version="1.0" encoding="utf-8"?>

<Module Name="News">
    <Templates>
        <Template Name="NewsArticle">
            <Section Name="News">
                <Field Name="NewsBody" FieldType="Rich Text" />
                <Field Name="NewsDate" FieldType="DateTime" />
                <Field Name="NewsImage" FieldType="Image" />
                <Field Name="NewsSummary" FieldType="Single-Line Text" />
                <Field Name="NewsTitle" FieldType="Single-Line Text" />
            </Section>
        </Template>

        <Template Name="NewsFolder" />
    </Templates>

    <Items>
        <Item Path="/sitecore/content/NewsSection" Ref="NewsFolderType" />

        <Type RefName="NewsFolderType">
            <Item Template="NewsFolder">
                <Children>
                    <Item Template="NewsArticle" MinOccurs="0" MaxOccurs="Unlimited" IsInsertOption="True" />
                    <Item Template="NewsFolder" Ref="NewsFolderType" MinOccurs="0" MaxOccurs="Unlimited" IsInsertOption="True" />
                </Children>
            </Item>
        </Type>
    </Items>
</Module>
