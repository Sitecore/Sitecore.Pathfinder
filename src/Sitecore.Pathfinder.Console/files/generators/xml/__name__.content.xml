<SampleItem TemplateName="Sample Item" Name="&lt;%= name %&gt;" ItemPath="&lt;%= itemPath %&gt;" Database="master">
    <Fields>
        <en Title="Sitecore" Text="Welcome to Sitecore" />
        <da Title="Sitecore" Text="Velkommen til Sitecore" />
    </Fields>
    <Layout>
        <Default Layout="Sample Layout">
            <main>
                <SampleSublayout Rendering="Sample Sublayout">
                    <centercolumn>
                        <SampleInnerSublayout Rendering="Sample Inner Sublayout">
                            <content>
                                <SampleRendering Rendering="Sample Rendering" />
                            </content>
                        </SampleInnerSublayout>
                    </centercolumn>
                </SampleSublayout>
            </main>
        </Default>
    </Layout>
    <Items>
        <SampleItem TemplateName="Sample Item" Name="Subitem">
            <Fields>
                <en>
                    <Title>Sitecore</Title>
                    <Text>Welcome to Sitecore</Text>
                </en>
                <da>
                    <Title>Sitecore</Title>
                    <Text>Velkommen til Sitecore</Text>
                </da>
            </Fields>
        </SampleItem>

        <Template Name="MyTemplate">
            <Section Name="Fields">
                <Field Name="IsActive" Type="Checkbox" Sharing="Shared" />
                <Field Name="Text" Type="Single-Line Text" Sharing="Unversioned" />
            </Section>
        </Template>
    </Items>
</SampleItem>
