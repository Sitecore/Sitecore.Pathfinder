{
    // every project must have a unique id, since the project-unique-id is used to
    // calculate item ids.
    "project-unique-id": "{project-unique-id}",

    "website-directory": "c:\\inetpub\\wwwroot\\Sitecore.Default\\Website",
    "data-folder-directory": "c:\\inetpub\\wwwroot\\Sitecore.Default\\Data",
    "host-name": "http://sitecore.default",

    // user name and password
    "user-name": "sitecore\\admin",
    "password": "b",

    // Sitecore database name (master, core, or web)
    "database": "master",

    "project-website-mappings": {
        "project-to-website": {
            "master": {
                "project-directory-to-item-path": "/content/master/sitecore => /sitecore"
            },

            "core": {
                "project-directory-to-item-path": "/content/core/sitecore => /sitecore",
                "database": "core"
            },

            "wwwroot": {
                "project-directory-to-website-directory": "/wwwroot => /"
            },

            "views": {
                "project-directory-to-item-path": "/views => /sitecore/layout/renderings",
                "project-directory-to-website-directory": "/views => /views"
            },
        },

        "website-to-project": {
            "website-to-project-0": {
                "item-path-to-project-directory": "/sitecore/content/Home/CleanBlog => /content/master/sitecore/content/Home/CleanBlog",
                "format": "item.json"
            }
        },

        "template": {
            "core": {
                "project-directory-to-item-path": "/content/core/sitecore => /sitecore",
                "database": "core",

                "file-name-include": "**",
                "file-name-exclude": "**"
            },

            "website-to-project-0": {
                "item-path-to-project-directory": "/sitecore/content/Home/CleanBlog => /content/master/sitecore/content/Home/CleanBlog",
                "format": "item.json",

                "item-name-include": "**",
                "item-name-exclude": "**",

                "item-template-name-include": "**",
                "item-template-name-exclude": "**",

                "item-xpath-include": "true",
                "item-xpath-exclude": "true"
            }
        }
    },

    // =====
    // TASKS
    // =====

    "build-project": {
        // build tasks
        "tasks": "check-project write-exports pack-nuget copy-dependencies copy-package install-package publish-database show-metrics",

        // mapping of files between project paths and website paths and item paths
        "files": {
            "master": {
                "project-directory": "/content/master/sitecore",
                "include": "**",
                "website-directory": "/",
                "item-path": "/sitecore",
                "database": "master"
            },
            "core": {
                "project-directory": "/content/core/sitecore",
                "include": "**",
                "website-directory": "/",
                "item-path": "/sitecore",
                "database": "core"
            },
            "views": {
                "project-directory": "/Views",
                "include": "**",
                "website-directory": "/Views",
                "item-path": "/sitecore/layout/renderings"
            },
            "wwwroot": {
                "project-directory": "/wwwroot",
                "include": "**",
                "website-directory": "/",
                "item-path": "/",
                "upload-media": false
            }
        }
    }
}
