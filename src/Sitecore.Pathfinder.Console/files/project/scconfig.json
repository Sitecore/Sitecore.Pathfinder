{
    // every project must have a unique id, since the project-unique-id is used to
    // calculate item ids.
    "project-unique-id": "{project-unique-id}",

    "website-directory": "c:\\inetpub\\wwwroot\\Sitecore.Default\\Website",
    "data-folder-directory": "c:\\inetpub\\wwwroot\\Sitecore.Default\\Data",
    "host-name": "http://sitecore.default",

    // user name and password
    "user-name": "sitecore\\admin",
    "password": "b",

    // Sitecore database name (master, core, or web)
    "database": "master",

    // =====
    // TASKS
    // =====

    "build-project": {
        // build tasks
        "tasks": "check-project write-exports pack-nuget copy-dependencies copy-package install-package publish-database show-metrics",

        "project-website-mapping": {
            "master": {
                "type": "items",

                "item-path-to-project-directory": "/sitecore <=> /content/master/sitecore",
                "database": "master",

                "project-files-include": "**",
                "project-files-exclude": "**",

                "item-name-include": "",
                "item-name-exclude": "",

                "item-template-include": "",
                "item-template-exclude": "",

                "item-xpath-include": "",
                "item-xpath-exclude": "",

                "format": "item.json"
            }
        },

        // mapping of files between project paths and website paths and item paths
        "files": {
            "master": {
                "project-directory": "/content/master/sitecore",
                "include": "**",
                "website-directory": "/",
                "item-path": "/sitecore",
                "database": "master"
            },
            "core": {
                "project-directory": "/content/core/sitecore",
                "include": "**",
                "website-directory": "/",
                "item-path": "/sitecore",
                "database": "core"
            },
            "views": {
                "project-directory": "/Views",
                "include": "**",
                "website-directory": "/Views",
                "item-path": "/sitecore/layout/renderings"
            },
            "wwwroot": {
                "project-directory": "/wwwroot",
                "include": "**",
                "website-directory": "/",
                "item-path": "/",
                "upload-media": false
            }
        }
    }
}
