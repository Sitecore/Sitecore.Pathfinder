{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",

  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "Layout": { "$ref": "#/definitions/Layout" }
  },

  "definitions": {
    "Layout": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Devices": {
          "type": "array",
          "items": {
            "additionalProperties": false,
            "properties": {
              "Name": { "type": "string" },
              "Layout": { "type": "string" },
              "Renderings": { "$ref": "#/definitions/Renderings" }
            }
          }
        }
      }
    },

    "Renderings": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/HelloWorld" },
          { "$ref": "#/definitions/HelloWorld2" }
        ]
      }
    },

    "HelloWorld": {
      "type": "object",
      "additionalProperties": false,
      "additionalItems": false,
      "properties": {
        "HelloWorld": {
          "type": "object",
          "additionalProperties": false,
          "additionalItems": false,
          "description": "Hello World",
          "properties": {
            "Text": { "type": "string" },
            "DropLine": {
              "enum": [
                "21323",
                "34234"
              ]
            },
            "Renderings": { "$ref": "#/definitions/Renderings" }
          }
        }
      }
    },

    "HelloWorld2": {
      "type": "object",
      "additionalProperties": false,
      "additionalItems": false,
      "properties": {
        "HelloWorld2": {
          "type": "object",
          "additionalProperties": false,
          "additionalItems": false,
          "properties": {
            "Text": { "type": "string" },
            "Renderings": { "$ref": "#/definitions/Renderings" }
          }
        }
      }
    }
  }
}
